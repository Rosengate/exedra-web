<style type="text/css">
  table {
    font-size: 1em;
  }
</style>
<h1>Properties</h1>
<p>A complete route properties.</p>
<div style="padding:10px 0; background: white;">
  <table class='table table-striped'>
    <tr>
      <th>Property</th>
      <th style="width: 60%;">Description</th>
      <th>Value</th>
    </tr>
    {% for property, struct in route_properties %}
      <tr>
        <td><span><code>{{ property }}</code></span></td>
        <td>{{ struct.description | raw }}</td>
        <td>
          {% if struct.value is iterable %}
            {% for value in struct.value %}
              <div style="padding-bottom: 5px;">{{ value | raw }}</div>
            {% endfor %}
          {% else %}
            <code>{{ struct.value }}</code>
          {% endif %}
        </td>
      </tr>
    {% endfor %}
  </table>
</div>